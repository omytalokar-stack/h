<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Agent Control Panel"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Agent: INACTIVE"
        android:textSize="18sp"
        android:textColor="@color/accent_red"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start AI Agent"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/accent_green" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop AI Agent"
        android:textSize="16sp"
        android:backgroundTint="@color/accent_red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice Commands:\n• Utha = Answer Call\n• Cut kar = Hang Up\n• WhatsApp kar = Send Message"
        android:textSize="14sp"
        android:layout_marginTop="30dp"
        android:gravity="center" />

</LinearLayout>
